{% extends 'layoutAdmin.html.twig' %}

{% block content %}
    <section>
        <div class="container-fluid py-5 row justify-content-center">
            <div class="card col-10 col-sm-4 px-1 px-sm-5">
                <div class="card-body">
                    <h1 class="card-title">Espace administrateur</h1>
                    <form action="/admin/login" method="POST">
                        <div class="form-group">
                            <label for="admin_login" class="form-text">Username</label>
                            <input type="text" name="admin_login" class="form-control" id="admin_login">
                            {% if errors is defined and errors is not empty %}
                                <p class="form-text"><small class="text-danger">{{ errors.login }}</small></p>
                            {% endif %}
                        </div>
                        <div class="form-group">
                            <label for="admin_login" class="form-text">Password</label>
                            <input type="password" name="admin_pass" class="form-control">
                            {% if errors is defined and errors is not empty %}
                                <p class="form-text"><small class="text-danger">{{ errors.pass }}</small></p>
                            {% endif %}
                        </div>
                        <button type="submit" class="btn btn-primary" name="submit">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}